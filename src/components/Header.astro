---
// Nav.astro
const navItems = [
  { name: 'Inicio', href: '/' },
  { name: 'Acerca', href: '/acerca' },
  { name: 'Servicios', href: '/servicios' },
  { name: 'Contacto', href: '/contacto' },
];
---

<nav class="bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="text-xl font-bold text-primary">
          Logo
        </a>
      </div>
      <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-sm font-medium text-muted hover:border-gray-300 hover:text-foreground transition duration-150 ease-in-out"
          >
            {item.name}
          </a>
        ))}
      </div>
      <div class="-mr-2 flex items-center sm:hidden">
        <button
          id="mobile-menu-button"
          class="inline-flex items-center justify-center p-2 rounded-md text-muted hover:text-foreground hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir menú principal</span>
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="sm:hidden" id="mobile-menu">
    <div class="pt-2 pb-3 space-y-1 mobile-menu-content">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-muted hover:text-foreground hover:bg-gray-50 hover:border-gray-300 transition duration-150 ease-in-out"
        >
          {item.name}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuContent = mobileMenu?.querySelector('.mobile-menu-content');

  if (mobileMenuButton && mobileMenu && mobileMenuContent) {
    mobileMenuButton.addEventListener('click', () => {
      const expanded = mobileMenuButton.getAttribute('aria-expanded') === 'true' || false;
      mobileMenuButton.setAttribute('aria-expanded', (!expanded).toString());
      
      if (expanded) {
        mobileMenu.style.height = '0px';
        mobileMenuContent.style.opacity = '0';
      } else {
        mobileMenu.style.height = `${mobileMenuContent.scrollHeight}px`;
        mobileMenuContent.style.opacity = '1';
      }

      // Cambiar el ícono
      const svg = mobileMenuButton.querySelector('svg');
      if (svg) {
        if (expanded) {
          svg.innerHTML = `
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          `;
        } else {
          svg.innerHTML = `
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          `;
        }
      }
    });
  }
</script>

<style>
  #mobile-menu {
    overflow: hidden;
    transition: height 0.3s ease-out;
    height: 0;
  }

  .mobile-menu-content {
    transition: opacity 0.3s ease-out;
    opacity: 0;
  }

  /* Estilos adicionales si son necesarios */
</style>