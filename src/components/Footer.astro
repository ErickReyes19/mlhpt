---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { title: "Compañía", links: [
    { name: "Acerca de", href: "/acerca" },
    { name: "Carreras", href: "/carreras" },
    { name: "Contacto", href: "/contacto" },
  ]},
  { title: "Recursos", links: [
    { name: "Blog", href: "/blog" },
    { name: "Guías", href: "/guias" },
    { name: "FAQ", href: "/faq" },
  ]},
];

const socialLinks = [
  { name: "Facebook", href: "https://facebook.com", icon: "mdi:facebook" },
  { name: "Twitter", href: "https://twitter.com", icon: "mdi:twitter" },
  { name: "Instagram", href: "https://instagram.com", icon: "mdi:instagram" },
  { name: "LinkedIn", href: "https://linkedin.com", icon: "mdi:linkedin" },
];
---

<footer class="bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="col-span-1 md:col-span-2">
          <h2 class="text-2xl font-bold mb-4">Suscríbete a nuestro newsletter</h2>
          <form class="flex flex-col sm:flex-row gap-4">
            <input
              type="email"
              placeholder="Tu correo electrónico"
              class="bg-gray-800 text-white px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 flex-grow"
              required
            />
            <button
              type="submit"
              class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md transition duration-300"
            >
              Suscribirse
            </button>
          </form>
        </div>
  
        {/* Contenedor para "Compañía" y "Recursos" */}
        <div class="flex flex-row sm:flex-row justify-between md:grid md:grid-cols-2 gap-2 md:col-span-2 mt-4">
          {footerLinks.slice(0, 2).map((column) => ( // Tomamos solo los primeros dos elementos
            <div key={column.title}>
              <h3 class="text-lg font-semibold mb-4">{column.title}</h3>
              <ul class="space-y-2">
                {column.links.map((link) => (
                  <li key={link.name}>
                    <a
                      href={link.href}
                      class="text-gray-300 hover:text-white transition duration-300"
                    >
                      {link.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
  
      <div class="mt-8 pt-8 border-t border-gray-800 flex flex-col sm:flex-row justify-between items-center">
        <div class="mb-4 sm:mb-0">
          <p>&copy; {currentYear} Tu Empresa. Todos los derechos reservados.</p>
        </div>
        <div class="flex space-x-4">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              class="text-gray-400 hover:text-white transition duration-300"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="sr-only">{link.name}</span>
              {/* Asegúrate de que el icono se cargue correctamente aquí */}
              <svg class="w-6 h-6">
                <use href={`https://cdn.jsdelivr.net/npm/mdi@latest/svg/${link.icon}.svg`} />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
  </footer>
  
  
